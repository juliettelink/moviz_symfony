 <div class="col-md-4 my-2 d-flex">
    <div class="card w-100">
    {#  et pour 'image retrouver celle mise pas default dans entity/movie.php #}
       {% if movie.imageName %}
            <img src="{{vich_uploader_asset(movie, 'imageFile')}}" class="card-img-top" alt="affiche {{movie.name}}">
       {% else %}
            <img src="{{asset('build/images/default-movie.png')}}" class="card-img-top" alt="affiche {{movie.name}}">
        {% endif %}
        <div class="card-body">
            <h5 class="card-title">{{movie.name}}</h5>
            <a href="{{ path('app_movie_show', {'id': movie.id}) }}" class="btn btn-primary">Voir la fiche</a>
        </div>
    </div>
</div>